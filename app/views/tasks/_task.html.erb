<turbo-frame id="<%= dom_id task%>">
  <div class="block mb-2">
    <%= form_with model: task, class:"text-lg inline-block my-1 w-72" do |f| %>
      <%= f.check_box :completed,
                  data: {
                    id: task.id,
                    action: "tasks#toggle",
                  },
                  class:
                    "mr-2 align-middle bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-5 w-5 rounded checked:bg-green-500" %>
      <%= task.description %>
    <% end %>

    <%= link_to "编辑", edit_task_path(task), class: "btn text-sm bg-gray-100" %>
    <div class="inline-block ml-2">
      <%= button_to "删除",
      task_path(task),
      method: :delete,
      data: {
        "turbo-frame": "_top",
      },
      class:
        "btn bg-red-100 hover:bg-red-500 hover:text-white text-sm cursor-pointer rounded-full px-2" %>
    </div>
  </div>
</turbo-frame>
