<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 font-medium rounded-lg">
    <%= notice %>
  </p>
<% end %>

<h1 class="font-bold text-2xl mb-5">
  任务管理
</h1>
<%= render "form", task: @task %>

<h3>任务列表</h3>
<turbo-frame id="task-list">
  <div data-controller="tasks">
    <%= render @tasks %>
  </div>
</turbo-frame>
